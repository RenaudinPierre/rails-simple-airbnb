<div class="container">

<h1>Flats</h1>

<% @flats.each do |flat| %>
  <h2><%= flat.name %></h2>
  <p><%= flat.address %></p>
  <p><%= flat.price_per_night %></p>
  <p><%= flat.number_of_guests %></p>
  <p><%= link_to 'More info', flat %></p>
<% end %>

<p>  <%= link_to 'Add Flat', new_flat_path %></p>

</div>
